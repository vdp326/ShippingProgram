        <Label x:Name="label2" Content="Total:" HorizontalAlignment="Left" Margin="300,30,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="textBox" HorizontalAlignment="Left" Height="23" Margin="144,34,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="64"/>
        <TextBox x:Name="textBox1" HorizontalAlignment="Left" Height="23" Margin="144,100,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="64"/>
        <TextBox x:Name="textBox2" HorizontalAlignment="Left" Height="23" Margin="343,32,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="61"/>
        <Button x:Name="button" Content="Calculate Total" HorizontalAlignment="Left" Margin="300,95,0,0" VerticalAlignment="Top" Width="104" Height="31" Click="button_Click"/>

    </Grid>
</Window>
